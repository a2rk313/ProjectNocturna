{
  "name": "project-nocturna",
  "version": "1.0.0",
  "description": "Real-time light pollution monitoring platform",
  "main": "server.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon server.js",
    "start": "NODE_ENV=production node server.js",
    "build": "npm run build:client && npm run build:server",
    "build:server": "babel server.js --out-dir dist --presets env",
    "build:client": "webpack --mode production",
    "seed": "node scripts/seed.js",
    "migrate": "node scripts/migrate.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "prettier": "prettier --write .",
    "vercel-dev": "vercel dev",
    "vercel-deploy": "vercel --prod",
    "install-hdf5": "echo 'To enable full HDF5 processing, run: npm install hdf5' && echo 'Note: This requires system dependencies like HDF5 library'"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.13",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.13.0",
    "axios-retry": "^4.5.0",
    "h5wasm": "^0.8.11",
    "openai": "^6.16.0",
    "turf": "^3.0.14",
    "uuid": "^9.0.1",
    "moment": "^2.30.1",
    "lodash": "^4.17.21",
    "moment-timezone": "^0.5.45",
    "validator": "^13.11.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.4",
    "csv-parser": "^3.0.0",
    "papaparse": "^5.4.1"
  },
  "devDependencies": {
    "@vercel/node": "^2.15.10"
  },
  "optionalDependencies": {
    "hdf5": "^1.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "light-pollution",
    "environmental-monitoring",
    "geospatial",
    "nasa",
    "viirs",
    "earth-observation",
    "remote-sensing",
    "dark-sky",
    "astronomy"
  ],
  "author": "Project Nocturna Team",
  "license": "MIT"
}
