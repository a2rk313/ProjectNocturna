# .env.podman - Podman specific configuration
# Use this when running with Podman

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=nocturna
# For Podman networking
DB_HOST=localhost
DB_PORT=5432

# GeoServer Configuration
GEOSERVER_ADMIN_USER=admin
GEOSERVER_ADMIN_PASSWORD=your_geoserver_password_here

# Application Settings
NODE_ENV=production
PORT=3000
# For Podman, frontend and backend on same port
ALLOWED_ORIGIN=http://localhost:3000
# Secret key to authorize database seeding
ADMIN_SECRET=super_secret_admin_key