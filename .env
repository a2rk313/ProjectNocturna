# .env file

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=nocturna
# 'db' will be the service name in the next Docker step
DB_HOST=db
DB_PORT=5432

# GeoServer Configuration
GEOSERVER_ADMIN_USER=admin
GEOSERVER_ADMIN_PASSWORD=your_geoserver_password_here

# Application Settings
NODE_ENV=production
PORT=3000
# Restrict access to this specific frontend origin
ALLOWED_ORIGIN=http://localhost:8081
# Secret key to authorize database seeding
ADMIN_SECRET=super_secret_admin_key